---
const { heading, subheading } = Astro.props;
---

<div class="mb-20 text-center">
  <h2 class="text-5xl tracking-tighter text-primary">{heading}</h2>
  <p class="text-2xl sm:text-3xl pt-4 text-balance">
    {subheading}
  </p>
</div>

<style>
  h2 {
    font-family: var(--ff-heading);
  }
  p {
    font-family: var(--ff-subheading);
    line-height: 1.5;
  }
</style>
