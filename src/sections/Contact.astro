---
import SectionContainer from "../components/SectionContainer.astro";
import SectionHeading from "../components/SectionHeading.astro";
---

<SectionContainer id="contact">
  <SectionHeading heading="Get in touch" />
  <form
    class="border-4 border-secondary p-12 max-w-fit mx-auto rounded-3xl bg-neutral flex flex-col gap-6 shadow-xl"
    name="contact"
    method="POST"
    data-netlify="true"
  >
    <label class="sr-only" for="email"></label>
    <input
      id="email"
      class="input input-lg input-secondary"
      type="email"
      name="email"
      required
      placeholder="your name"
    />
    <label class="sr-only" for="name">Your Name:</label>
    <input
      id="name"
      class="input input-lg input-secondary"
      type="text"
      name="name"
      required
      placeholder="your@email.com"
    />
    <label class="sr-only" for="message"></label>
    <textarea
      id="message"
      class="textarea textarea-secondary textarea-lg"
      name="message"
      required
      placeholder="your message"></textarea>

    <button class="btn btn-lg btn-secondary shadow" type="submit">Send</button>
  </form>
</SectionContainer>
